---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Services & Pricing - Heartwood Wellbeing">
  <Navigation />

<br></br>
    <!-- Services Section-->
  <section class="py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
             <h2 class="text-5xl font-serif font-semibold text-warm-brown mb-12 text-center">Our Services</h2>
       <div class="max-w-4xl mx-auto text-center">
         <p class="text-lg text-text-medium mb-8">
           Professional in-care services designed for residents in care homes
         </p>
       </div>
     </div>
   </section>

  <!-- Services Pricing Image -->
  <section class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-center">
        <img 
          src="/assets/images/heartwoodprices.jpg" 
          alt="Heartwood Wellbeing In-Care Services Menu with pricing for ACORN (30 mins, £30), WILLOW (60 mins, £60), and OAK (2 hours, £120) packages" 
          class="max-w-full h-auto rounded-3xl shadow-lg hover:shadow-2xl transition-shadow duration-500"
        />
      </div>
    </div>
  </section>

  <!-- Additional Information -->
  <section class="py-20 bg-off-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-3xl p-8 shadow-soft">
        <h2 class="text-3xl font-serif font-semibold text-warm-brown mb-6 text-center">Good to Know</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-xl font-semibold text-coral-warmth mb-4">What Makes Us Special</h3>
            <ul class="space-y-2 text-text-medium">
              <li class="flex items-start"><span class="text-sage-green mr-2">•</span>All sessions include therapeutic tools</li>
              <li class="flex items-start"><span class="text-sage-green mr-2">•</span>Family follow-up after every visit</li>
              <li class="flex items-start"><span class="text-sage-green mr-2">•</span>Bespoke packages available</li>
              <li class="flex items-start"><span class="text-sage-green mr-2">•</span>Gift vouchers available</li>
            </ul>
          </div>
          
          <div>
            <h3 class="text-xl font-semibold text-coral-warmth mb-4">Booking Details</h3>
            <ul class="space-y-2 text-text-medium">
              <li class="flex items-start"><span class="text-sage-green mr-2">•</span>Travel time included locally</li>
              <li class="flex items-start"><span class="text-sage-green mr-2">•</span>Extended travel fee applies</li>
              <li class="flex items-start"><span class="text-sage-green mr-2">•</span>Fully insured & DBS checked</li>
            </ul>
          </div>
        </div>
        
        <div class="mt-8 text-center">
          <a href="/contact" class="inline-block bg-coral-warmth text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-dusty-rose transform hover:-translate-y-1 transition-all shadow-lg">
            Book Your Discovery Call
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
</style> 