---
// Navigation component for Heartwood Wellbeing
const currentPath = Astro.url.pathname;
---

<nav class="bg-white shadow-lg fixed top-0 w-full z-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <div class="flex items-center space-x-4">
        <span class="text-xl font-serif font-semibold text-warm-brown">Heartwood Wellbeing</span>
      </div>
      <ul class="hidden md:flex space-x-8">
        <li><a href="/" class={`font-medium transition-colors ${currentPath === '/' ? 'text-coral-warmth' : 'text-text-dark hover:text-coral-warmth'}`}>Home</a></li>
        <li><a href="/services" class={`font-medium transition-colors ${currentPath === '/services' ? 'text-coral-warmth' : 'text-text-dark hover:text-coral-warmth'}`}>Services</a></li>
        <li><a href="/meet-kelly" class={`font-medium transition-colors ${currentPath === '/meet-kelly' ? 'text-coral-warmth' : 'text-text-dark hover:text-coral-warmth'}`}>Meet Kelly</a></li>
        <li><a href="/contact" class="bg-coral-warmth text-white px-6 py-2 rounded-full hover:bg-dusty-rose transition-colors">Contact</a></li>
      </ul>
      
      <!-- Mobile Menu Button -->
      <button 
        class="md:hidden p-2 text-text-dark hover:text-coral-warmth"
        id="mobile-menu-button"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <div class="md:hidden hidden mt-4 pb-4" id="mobile-menu">
      <a href="/" class={`block py-2 ${currentPath === '/' ? 'text-coral-warmth' : 'text-text-dark hover:text-coral-warmth'}`}>Home</a>
      <a href="/services" class={`block py-2 ${currentPath === '/services' ? 'text-coral-warmth' : 'text-text-dark hover:text-coral-warmth'}`}>Services</a>
      <a href="/meet-kelly" class={`block py-2 ${currentPath === '/meet-kelly' ? 'text-coral-warmth' : 'text-text-dark hover:text-coral-warmth'}`}>Meet Kelly</a>
      <a href="/contact" class={`block py-2 ${currentPath === '/contact' ? 'text-coral-warmth' : 'text-text-dark hover:text-coral-warmth'}`}>Contact</a>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script> 