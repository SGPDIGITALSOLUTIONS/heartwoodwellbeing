---
// Navigation component for Heartwood Wellbeing
---

<nav class="fixed top-0 w-full bg-white shadow-soft z-50">
  <div class="max-w-6xl mx-auto px-8 py-4">
    <div class="flex justify-between items-center">
      <!-- Logo and Title -->
      <div class="flex items-center gap-4">
        <img 
          src="/assets/images/heartwood-logo.jpg" 
          alt="Heartwood Wellbeing Logo" 
          class="h-12 w-auto"
        />
        <span class="font-serif text-2xl font-semibold text-warm-brown">
          Heartwood Wellbeing
        </span>
      </div>
      
      <!-- Navigation Menu -->
      <ul class="hidden md:flex items-center gap-8">
        <li>
          <a 
            href="#about" 
            class="text-text-dark font-medium hover:text-coral-warmth transition-colors duration-300"
          >
            About
          </a>
        </li>
        <li>
          <a 
            href="#services" 
            class="text-text-dark font-medium hover:text-coral-warmth transition-colors duration-300"
          >
            Services
          </a>
        </li>
        <li>
          <a 
            href="#kelly" 
            class="text-text-dark font-medium hover:text-coral-warmth transition-colors duration-300"
          >
            Meet Kelly
          </a>
        </li>
        <li>
          <a 
            href="#contact" 
            class="bg-coral-warmth text-white px-6 py-3 rounded-3xl font-semibold hover:bg-dusty-rose transition-colors duration-300"
          >
            Contact
          </a>
        </li>
      </ul>
      
      <!-- Mobile Menu Button -->
      <button 
        class="md:hidden p-2 text-text-dark hover:text-coral-warmth"
        id="mobile-menu-button"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <div class="md:hidden hidden mt-4 pb-4" id="mobile-menu">
      <a href="#about" class="block py-2 text-text-dark hover:text-coral-warmth">About</a>
      <a href="#services" class="block py-2 text-text-dark hover:text-coral-warmth">Services</a>
      <a href="#kelly" class="block py-2 text-text-dark hover:text-coral-warmth">Meet Kelly</a>
      <a href="#contact" class="block py-2 text-coral-warmth font-semibold">Contact</a>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
  
  // Smooth scroll for navigation links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        const offsetTop = target.offsetTop - 80; // Account for fixed navbar
        window.scrollTo({
          top: offsetTop,
          behavior: 'smooth'
        });
      }
    });
  });
</script> 